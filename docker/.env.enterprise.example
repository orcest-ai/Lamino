###############################################################################
# Orcest AI Enterprise Stack - Environment Configuration
# Copy to .env and fill in values before running docker-compose
###############################################################################

# ─── General ─────────────────────────────────────────────────────────────
UID=1000
GID=1000

# ─── Service Ports ───────────────────────────────────────────────────────
LAMINO_PORT=3001
RAINYMODEL_PORT=8080
LOGIN_PORT=10001
STATUS_PORT=10000
ORCEST_WEB_PORT=8000
OLLAMA_PORT=11434
CHROMA_PORT=8100
REDIS_PORT=6379

# ─── Security ────────────────────────────────────────────────────────────
# RainyModel API authentication key
RAINYMODEL_MASTER_KEY=your-rainymodel-key-here

# SSO shared secret (must match between login and all clients)
SSO_CLIENT_SECRET=your-sso-client-secret-here

# SSO admin credentials
SSO_SECRET_KEY=your-sso-secret-key-here
SSO_ADMIN_EMAIL=admin@orcest.ai
SSO_ADMIN_PASSWORD=change-me-in-production

# Orcest platform master API key
ORCEST_MASTER_API_KEY=your-orcest-api-key-here

# ─── SSO Callback URLs (adjust for your domain) ─────────────────────────
SSO_ISSUER=http://login:10001
SSO_CALLBACK_URL=http://localhost:3001/auth/callback
ORCEST_CALLBACK_URL=http://localhost:8000/auth/callback
ORCEST_SSO_ENABLED=true

# ─── LLM Provider API Keys (optional - configure as needed) ─────────────
# At minimum, set HF_TOKEN for free-tier access
HF_TOKEN=
OPENROUTER_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
GEMINI_API_KEY=
GROQ_API_KEY=
XAI_API_KEY=

# OllamaFreeAPI (if using external ollamafreeapi.orcest.ai)
OLLAMAFREE_API_BASE=
OLLAMAFREE_API_KEY=

# ─── Vector Database ────────────────────────────────────────────────────
VECTOR_DB=lancedb
# To use ChromaDB instead: VECTOR_DB=chroma

# ─── Feature Flags ──────────────────────────────────────────────────────
DISABLE_TELEMETRY=true
GENERIC_OPENAI_STREAMING_DISABLED=false
